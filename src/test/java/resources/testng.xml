<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="UdemyWeb">
    <test name="Registration tests">
        <classes>
            <class name="com.udemy.RegistrationTest">
                <methods>
                    <include name="registrationWithValidData"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Login tests">
        <classes>
            <class name="com.udemy.LoginTest">
                <methods>
                    <include name="loginTest"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Search test">
        <classes>
            <class name="com.udemy.SearchTest">
                <methods>
                    <include name="searchTest"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Categories test">
        <classes>
            <class name="com.udemy.CategoriesTest">
                <methods>
                    <include name="categoriesTest"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>

